<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Admin.AdminRap"
    android:background="@drawable/lavender_bkg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:text="QUẢN LÍ RẠP"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edtTenRap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Rạp"

            />

        <EditText
            android:id="@+id/edtMoTaRap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả Rạp"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgRap"
                android:layout_width="246dp"
                android:layout_height="129dp"
                android:src="@drawable/imgempty" />

            <ImageView
                android:id="@+id/ibtnUpImgRap"
                android:layout_width="112dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/upfile" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:id="@+id/btnThemRap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"

                android:text="Thêm rạp" />

            <Button
                android:id="@+id/btnSuaRap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="Sửa" />

            <Button
                android:id="@+id/btnXoaRap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="Xóa" />

            <Button
                android:id="@+id/btnHienThiRap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="Hiển thị" />

        </LinearLayout>
    </LinearLayout>


    <GridView
        android:id="@+id/gvListRap"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:background="#CE3F4FA6"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:numColumns="2"
        android:verticalSpacing="@android:dimen/app_icon_size"


        />
</LinearLayout>