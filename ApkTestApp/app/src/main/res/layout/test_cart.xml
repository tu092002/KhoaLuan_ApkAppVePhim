<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatVe"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"

        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/ibtnCartDialog"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/baseline_shopping_cart_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:background="#03A9F4"
            android:padding="4dp"
            android:text="5"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/ibtnCartDialog"
            tools:layout_editor_absoluteY="0dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="143dp"
        android:layout_height="170dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnChonRap"
        android:layout_width="274dp"
        android:layout_height="59dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="248dp"
        android:text="chọn Rạp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChonGhe"
        android:layout_width="268dp"
        android:layout_height="58dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="344dp"
        android:text="Chọn ghế"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDateTimePickerTgXemPage"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="440dp"
        android:text="Chọn ngày Xem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDatVe"
        android:layout_width="253dp"
        android:layout_height="61dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="532dp"
        android:text="THÊM VÀO GIỎ HÀNG"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTenPhimDatVe"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="48dp"
        android:text="Tên Phim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGiaPhimDatVe"
        android:layout_width="101dp"
        android:layout_height="29dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="124dp"
        android:text="giá 2000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>