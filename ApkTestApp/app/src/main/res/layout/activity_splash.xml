<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/bgticket3">

    <View
        android:id="@+id/topView1"
        android:layout_width="18dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="#956A2B">
    </View>
    <View
        android:id="@+id/topView2"
        android:layout_width="18dp"
        android:layout_height="90dp"
        android:layout_toStartOf="@+id/topView1"
        android:visibility="invisible"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#29B588"></View>
    <View
        android:id="@+id/topView3"
        android:layout_width="18dp"
        android:layout_height="60dp"
        android:layout_toStartOf="@+id/topView2"
        android:visibility="invisible"
        android:layout_marginEnd="20dp"
        android:background="#551681">
    </View>


    <View
        android:id="@+id/bottomView1"
        android:layout_width="18dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#956A2B">
    </View>
    <View
        android:id="@+id/bottomView2"
        android:layout_width="18dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bottomView1"
        android:visibility="invisible"
        android:layout_marginEnd="20dp"
        android:background="#29B588"></View>
    <View
        android:id="@+id/bottomView3"
        android:layout_width="18dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bottomView2"
        android:visibility="invisible"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#551681">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_movie"></ImageView>

        <TextView

            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Movie"
            android:textColor="#A52525"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>

        <TextView

            android:id="@+id/txtSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Believe in your dreams!!!"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="italic"></TextView>

    </LinearLayout>

</RelativeLayout>