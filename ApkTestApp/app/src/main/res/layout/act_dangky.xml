<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dangKy"
    android:background="@drawable/lavender_bkg"
    android:gravity="top|center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_bkg"
        android:layout_margin="15dp"
        android:elevation="20dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ĐĂNG KÝ NGƯỜI DÙNG"
            android:textSize="30dp"
            android:textColor="#752D0C"
            android:elevation="8dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/edtHoTen"
            android:hint="Tên người dùng"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/baseline_person_25"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"
            android:elevation="8dp"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/edtUsername"
            android:hint="username"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/baseline_person_25"
            android:drawableRight="@drawable/baseline_done_24"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bkg"
            android:elevation="8dp"
            />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_bkg"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawableRight="@drawable/baseline_remove_red_eye_24"
            android:drawablePadding="8dp"
            android:elevation="8dp"
            android:hint="password"
            android:inputType="textPassword" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtRole"
            android:text="user"
            android:inputType="none"
            android:enabled="false"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/imgAvt"
                android:layout_width="180dp"
                android:layout_height="129dp"
                android:src="@drawable/imgempty" />

            <ImageView
                android:id="@+id/ibtnUpAvt"
                android:layout_width="112dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_add_photo_alternate_24" />

        </LinearLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDangKy"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Đăng Kí"
            android:textSize="15dp"
            app:cornerRadius="30dp"
            android:elevation="8dp"
            />
    </LinearLayout>
</LinearLayout>